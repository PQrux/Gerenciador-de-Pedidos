@model Assistente_de_Estagio.Models.Documento

@{
    ViewData["Title"] = "CriarDocumento";
}

<h1>CriarDocumento</h1>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="DocTools" asp-action="UploadFile" method="post" enctype="multipart/form-data">

            <input type="file" name="file" accept="application/msword" />  
            <button type="submit">Enviar Documento (arquivo.doc)</button>  
            <div class="form-group">
                <label asp-for="TituloDocumento" class="control-label">Insira o titulo do documento</label>
                <input asp-for="TituloDocumento" class="form-control" />
                <span asp-validation-for="TituloDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoDocumento" class="control-label">Descrição do documento</label>
                <input asp-for="DescricaoDocumento" class="form-control" />
                <span asp-validation-for="DescricaoDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequisitoDocumento" class="control-label"></label>
                <select asp-for="RequisitoDocumento" class="form-control" />
                <span asp-validation-for="RequisitoDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PosicaoDocumento" class="control-label"></label>
                <input asp-for="PosicaoDocumento" class="form-control" />
                <span asp-validation-for="PosicaoDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar a tela de gerenciamento</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
